{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "ESNext",

    // Bundler mode
    "moduleResolution": "node",
    "jsx": "react-jsx",

    // Linting
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
